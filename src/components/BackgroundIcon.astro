---
import type { ImageMetadata } from "astro";

type Props = {
  image: ImageMetadata;
  dominantColor: string;
  otherColor: string;
};

const { image, dominantColor, otherColor } = Astro.props;
---

<div class="background-icon" style={`background: linear-gradient(90deg, ${dominantColor}, ${otherColor});`}>
  <img src={image.src} alt="" />
</div>

<style>
  .background-icon {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    overflow: hidden;

    img {
      height: 30%;
      object-fit: contain;
      z-index: 1;
    }
  }
</style>
