<li>
  <slot />
</li>

<style>
  li {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 1rem;
    background: var(--color-overlay);
    width: 45%;
  }

  li::after {
    content: "";
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 4px solid var(--color-primary);
    background: var(--color-white);
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 5; /* above spine */
  }

  @media screen and (min-width: 1025px) {
    li:nth-child(even) {
      align-self: flex-end;
    }
  }

  @media screen and (max-width: 1025px) {
    li::after {
      width: 17px;
      height: 17px;
      left: 90%;
    }

    li {
      width: 85%;
    }

    li:not(:last-child) {
      margin-bottom: 4rem;
    }
  }
</style>
