---
import Carousel from "../../components/Carousel.astro";
---

<section>
  <Carousel>
    <slot />
    <slot name="overlay" slot="overlay" />
  </Carousel>
</section>

<style>
  section :global(.carousel) {
    .active.centered {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
      color: var(--color-white);
      font-size: 2rem;
      font-weight: bold;
      padding: 0 var(--size-page-padding);

      h3 {
        margin-top: 0;
      }
    }
  }
</style>
