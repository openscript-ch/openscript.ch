---
import Carousel from "../../components/Carousel.astro";
---

<section>
  <Carousel>
    <slot />
    <slot name="overlay" slot="overlay" />
  </Carousel>
</section>

<style>
  section :global(.carousel) {
    height: 60rem;
    max-height: 80vh;

    .active.centered {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
      color: var(--color-white);
      font-size: 1.8rem;
      font-weight: bold;
      padding: 0 var(--size-page-padding);

      .button {
        font-size: 1.2rem;
        color: var(--color-white);
      }

      h3 {
        margin: 0;
      }
    }
  }
</style>
